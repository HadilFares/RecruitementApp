<!------ Include the above in your HEAD tag ---------->

<link href="https://use.fontawesome.com/releases/v5.0.11/css/all.css" rel="stylesheet">
@if (Context.Session.GetInt32("UserId").HasValue)
{
    @if (Context.Session.GetString("UserRole") == "Rh")
    {
        <input type="checkbox" id="sidebar-toggle">
        <div class="sidebar">


            <div class="sidebar-header">

                <h3 class="brand">

                    <bold> Dashboard</bold>
                </h3>

                <label for="sidebar-toggle" class="ti-menu-alt"></label>
            </div>



            <div class="sidebar-menu">
                <ul>

                    <li>
                        <a asp-controller="Formations" asp-action="Index">
                           
                            <span class="active-menu">
                                <span class="ti-stats-up"></span>
                                <span>My Formations</span>
                            </span>
                        </a>

                    </li>


                    <li>

                        <a asp-controller="Rh" asp-action="lesemployeesSelonFormation">
                            <span class="ti-check-box"> </span>
                            <span>Employees selon Formation</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Rh" asp-action="DetailsProfile">
                            <span class="ti-user"> </span>
                            <span>Profile Détails</span>
                        </a>
                    </li>

                    <li>
                        <a asp-controller="User" asp-action="Logout">
                            <span class="ti-power-off"> </span>
                            <span>LogOut</span>
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    }

}


        <div class="main-content">
            <main>

                <h2 class="dash-title">Complete Your profile</h2>



                <form asp-action="CompeleteProfile" method="post">

                    @Html.AntiForgeryToken()

                    <div class="row">
                        <!-- Left side -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="adresse"></label>
                                <input asp-for="adresse" class="form-control" />
                                <span asp-validation-for="adresse"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Numero"></label>
                                <input asp-for="Numero" class="form-control" />
                                <span asp-validation-for="Numero"></span>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </main>
        </div>
    