@model RecruitementManagementApp.Models.Employee

@{
    ViewData["Title"] = "EditProfile";
    Layout = "DashCandL";
}


<input type="checkbox" id="sidebar-toggle">
<div class="sidebar">


    <div class="sidebar-header">

        <h3 class="brand">

            <bold> Dashboard</bold>
        </h3>

        <label for="sidebar-toggle" class="ti-menu-alt"></label>
    </div>



    <div class="sidebar-menu">
        <ul>

            <li>
                <a asp-controller="Employee" asp-action="AllFormations">

                    <span class="ti-stats-up"></span>
                    <span>All Formations</span>

                </a>

            </li>


            <li>

                <a asp-controller="Employee" asp-action="Suivremesdemandes">
                    <span class="ti-check-box"> </span>
                    <span>Mes demandes</span>
                </a>
            </li>
            <li>
                <a asp-controller="Employee" asp-action="DetailsProfile">
                    <span class="active-menu">
                        <span class="ti-user"> </span>
                        <span>Profile Détails</span>
                    </span>
                </a>
            </li>

            <li>
                <a asp-controller="User" asp-action="Logout">
                    <span class="ti-power-off"> </span>
                    <span>LogOut</span>
                </a>
            </li>

        </ul>
    </div>
</div>



<div class="main-content">
    <main>

        <h2 class="dash-title">Edit Profile</h2>






<h4>Candidat</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditProfile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdEmployee" />
            <div class="form-group">
                <label asp-for="DateNaiss" class="control-label"></label>
                <input asp-for="DateNaiss" class="form-control" />
                <span asp-validation-for="DateNaiss" class="text-danger"></span>
            </div>
            
           
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                        <input type="submit" value="Save" class="Editbtn" />
            </div>
                    
                        <a asp-action="DetailsProfile" asp-controller="Employee">Back to Profile</a>
                    
        </form>
    </div>
</div>


</main>
</div>
